# Alias

# unlias all
unalias -m '*'

# Config
# ZSH config
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="cd ~/.oh-my-zsh"
alias omzcustom="cd ~/.oh-my-zsh/custom"
alias zshalias="vim ~/.oh-my-zsh/custom/alias.zsh"
# Xresources config
alias Xresources="vim ~/.Xresources"
# Vim config
alias vimconfig="vim ~/.vimrc"

# file
alias ...="../.."
alias ....="../../.."
alias .....="../../../.."
alias ......="../../../../.."

# ls
alias ls="ls --color=tty"
alias ll="ls -lh"
alias la="ls -A"
alias laa="ls -a"
alias lla="ls -Alh"
alias llaa="ls -alh"

# git
alias gst="git status"
alias ga="git add"
alias gc="git commit -s -m"
alias gp="git push"
alias gl="git pull"
alias gres="git checkout --"

# matrix
alias unimatrix="xterm -maximized -e unimatrix"
alias cmatrix="unimatrix -a -s 96 -l o"
alias matrix="unimatrix -a -f -s 96 -l aAnnnPPPkkCcgG"

# gtop
alias gtop="xterm -maximized -e gtop"

# vim
alias vim="xterm -maximized -e vim"
