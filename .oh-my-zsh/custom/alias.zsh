# Alias

# unlias all
unalias -m '*'

# Config
# ZSH config
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="cd ~/.oh-my-zsh"
alias omzcustom="cd ~/.oh-my-zsh/custom"
alias zshalias="vim ~/.oh-my-zsh/custom/alias.zsh"
# Xresources config
alias Xresources="vim ~/.Xresources"
# Vim config
alias vimconfig="vim ~/.vimrc"

# file
alias ...="../.."
alias ....="../../.."
alias .....="../../../.."
alias ......="../../../../.."

# ls
alias ls="ls --color=tty"
alias ll="ls -lh"
alias la="ls -A"
alias laa="ls -a"
alias lla="ls -Alh"
alias llaa="ls -alh"

# git
alias gitstatus="git status"
alias gitadd="git add"
alias gitcommit="git commit -m"
alias gitpush="git push"
alias gitpull="git pull"
alias gitrestore="git checkout --"

# matrix
alias cmatrix="unimatrix -a -s 96 -l o"
alias matrix="unimatrix -a -f -s 96 -l aAnnnPPPkkCcgG"

# applications
alias godot="~/Applications/Godot_3.1/Godot_v3.1-stable_x11.64"
